@page
@model RegisterModel

    <div class="limiter" style="background-color:aliceblue;">
        <div class="container-login100">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title p-b-53">
                        Create new account.
                    </span>
                    <hr />

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Enter Username
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input asp-for="Input.Email" class="input100" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <span class="focus-input100"></span>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Enter Password
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input asp-for="Input.Password" class="input100" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <span class="focus-input100"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Confirm Password
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input asp-for="Input.ConfirmPassword" class="input100" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn m-t-17">
                        <button type="submit"  class="login100-form-btn">Register</button>
                        </div>
                </form>
                </div>
            </div>
        </div>


            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
